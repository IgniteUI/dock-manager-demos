{
  "name": "dock-manager-demos",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "author": "infragistics",
  "description": "Dock manager - showcase sample apps",
  "scripts": {
    "dev": "npm run install-projects && concurrently -n \"main,projects,styles\" -c \"cyan,magenta,gray\" \"npm run dev:main\" \"npm run dev:projects\" \"npm run watch-styles\"",
    "dev:main": "vite",
    "dev:projects": "tsx scripts/project-manager.ts dev",
    "install-projects": "tsx scripts/project-manager.ts install",
    "build": "npm run install-projects && npm run compile-styles && tsc && vite build && npm run build:projects",
    "build:projects": "tsx scripts/project-manager.ts build",
    "build:ci": "tsc && vite build --mode ci",
    "preview": "npm run build && vite preview",
    "compile-styles": "sass --load-path=node_modules --quiet-deps src/styles/styles.scss:src/styles/styles.css",
    "watch-styles": "sass --watch --load-path=node_modules --quiet-deps src/styles:src/styles src/styles/styles.scss:src/styles/styles.css"
  },
  "dependencies": {
    "@igniteui/material-icons-extended": "^3.1.0",
    "@vaadin/router": "^2.0.0",
    "concurrently": "^9.2.0",
    "igniteui-theming": "v19.3.0-beta.3",
    "igniteui-webcomponents": "6.3.1",
    "lit": "3.2.1",
    "sass": "^1.89.2",
    "marked": "^16.3.0",
    "marked-shiki": "^1.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "tsx": "^4.20.4",
    "typescript": "~5.7.2",
    "vite": "^6.3.6"
  }
}
